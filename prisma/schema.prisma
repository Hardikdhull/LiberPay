generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String   @id @default(cuid())
  name     String?
  email    String   @unique
  password String
  createdAt DateTime @default(now())
  transactions Transaction[]
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Int
  description String
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}
